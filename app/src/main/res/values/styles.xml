<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionDropDownStyle">@style/MyDropDownListView</item>
        <item name="titleTextAppearance">@style/AppTheme.TextAppearance.Toolbar.Title</item>
    </style>

    <style name="MyDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat" />
    <style name="AppTheme.TextAppearance.Toolbar" />

    <style name="AppTheme.TextAppearance.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
